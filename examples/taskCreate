# usage: ./taskCreate <JSON payload> <tes-endpoint> <token>
# example: ./taskCreate localftp/taskWithIO.json https://tes-ebrains.apps-dev.hbp.eu $TOKEN

jsonFile=$1
baseUrl=$2
token=$3

curl -iv                                    \
-X POST                                     \
-s                                          \
--header "Content-Type: application/json"   \
--header "Accept: application/json"         \
--header "Authorization: Bearer ${token}"   \
-d "@${jsonFile}"                           \
"$baseUrl/ga4gh/tes/v1/tasks"
